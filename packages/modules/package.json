{
  "name": "@repo/modules",
  "version": "0.0.0",
  "private": true,
  "sideEffects": [
    "**/*.css"
  ],
  "files": [
    "dist"
  ],
  "main": "dist/index.js",
  "types": "dist/index.d.ts",
  "exports": {
    "./accordion": "./src/modules/accordion/accordion.tsx",
    "./hero": "./src/modules/hero/hero.tsx",
    "./types": {
      "types": "./dist/types.d.ts",
      "import": "./dist/types.js"
    },
    "./styles.css": "./dist/index.css"
  },
  "scripts": {
    "clean": "rm -rf dist",
    "prebuild": "pnpm -F @repo/ui build",
    "build:styles": "tailwindcss -i ./src/styles.css -o ./dist/index.css",
    "build": "pnpm run clean && pnpm run build:styles && tsc -p tsconfig.json",
    "dev:styles": "tailwindcss -i ./src/styles.css -o ./dist/index.css --watch",
    "dev": "pnpm run clean && tsc -w -p tsconfig.json"
  },
  "peerDependencies": {
    "next": "catalog:",
    "react": "catalog:",
    "react-dom": "catalog:"
  },
  "dependencies": {
    "@portabletext/react": "^4.0.3",
    "@repo/ui": "workspace:*",
    "@repo/tailwind-config": "workspace:*"
  },
  "devDependencies": {
    "@repo/eslint-config": "workspace:*",
    "@repo/typescript-config": "workspace:*",
    "@types/react": "^19.1.13",
    "@types/react-dom": "^19.1.9",
    "@portabletext/types": "^2.0.15",
    "eslint": "^9.33.0",
    "@tailwindcss/cli": "^4.1.5",
    "tailwindcss": "catalog:",
    "typescript": "catalog:"
  }
}