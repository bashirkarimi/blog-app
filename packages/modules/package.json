{
  "name": "@repo/modules",
  "version": "0.0.0",
  "private": true,
  "sideEffects": [
    "**/*.css"
  ],
  "files": [
    "dist",
    "src/styles.css"
  ],
  "main": "dist/index.js",
  "types": "dist/index.d.ts",
  "exports": {
    "./types": {
      "types": "./dist/types.d.ts",
      "import": "./dist/types.js"
    },
    "./styles.css": "./dist/index.css",
    "./accordion": "./src/modules/accordion/accordion.tsx",
    "./hero": "./src/modules/hero/hero.tsx",
    "./image-teaser": "./src/modules/image-teaser/image-teaser.tsx",
    "./teaser-list": "./src/modules/teaser-list/teaser-list.tsx",
    "./header": "./src/modules/header/header.tsx",
    "./footer": "./src/modules/footer/footer.tsx",
    "./post-card": "./src/modules/post-card/post-card.tsx",
    "./blog-list": "./src/modules/blog-list/blog-list.tsx",
    "./category-bar": "./src/modules/category-bar/category-bar.tsx",
    "./section-renderer": "./src/modules/sections/section-renderer.tsx",
    "./*": "./dist/*.js"
  },
  "scripts": {
    "clean": "rm -rf dist",
    "prebuild": "pnpm -F @repo/ui build",
    "build:styles": "mkdir -p dist && tailwindcss -i ./src/styles.css -o ./dist/index.css --minify",
    "build": "pnpm run clean && pnpm run build:styles && tsc -p tsconfig.json",
    "dev:components": "tsc --watch",
    "dev:styles": "tailwindcss -i ./src/styles.css -o ./dist/index.css --watch"
  },
  "peerDependencies": {
    "next": "catalog:",
    "react": "catalog:",
    "react-dom": "catalog:"
  },
  "dependencies": {
    "@portabletext/react": "^4.0.3"
  },
  "devDependencies": {
    "@portabletext/types": "^2.0.15",
    "@repo/eslint-config": "workspace:*",
    "@repo/tailwind-config": "workspace:*",
    "@repo/typescript-config": "workspace:*",
    "@repo/ui": "workspace:*",
    "@tailwindcss/cli": "^4.1.17",
    "@types/react": "^19.2.7",
    "@types/react-dom": "^19.2.3",
    "eslint": "^9.39.1",
    "tailwind-merge": "^3.4.0",
    "tailwindcss": "catalog:",
    "typescript": "catalog:"
  }
}